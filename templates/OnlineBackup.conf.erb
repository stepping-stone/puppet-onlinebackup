##############################################################################
# OnlineBackup.conf
##############################################################################
# Description:
#  Configuration file for OnlineBackup, managed by Puppet do not manually edit
##############################################################################
# Customer Section
##############################################################################
# 
##############################################################################
VERBOSE=2
# Please add your username to the following line in the form of:
REMOTEUSER=xxxxxxx
PRIVKEYFILE=/root/.ssh/id_rsa
INCLUDEFILE=/usr/local/scripts/OnlineBackup/conf/OnlineBackupIncludeFiles.conf
EXCLUDEFILE=/usr/local/scripts/OnlineBackup/conf/OnlineBackupExcludeFiles.conf
PERMSCRIPT=/usr/local/scripts/OnlineBackup/tmp/SetPermissions.sh
LOGFILE=/var/log/OnlineBackup.log
LOCKFILE=/var/lock/OnlineBackup.lock
PARTITIONFILE=/usr/local/scripts/OnlineBackup/tmp/Partitions.txt
LOCKTIMEOUT=23
TEMPDIR=/var/tmp/
RSYNCBIN=/usr/bin/rsync
RSYNCLIST=1
SSHBIN=ssh
NUMERICOWNERS=1
DELETEEXCLUDED=0
SFDISKBIN=/sbin/sfdisk
SCANDISKS=/dev/sda

##############################################################################
# Backup scheduling
##############################################################################
# Please set this value according to your backup-cronjob
SCHEDULEDHOUR=20
SCHEDULEDMINUTE=00

##############################################################################
# Server / Provider specific options
##############################################################################
# Please do not modify these values if you don't know what you are doing.
REMOTEHOST=<REMOTE-HOST>
LOCALDIR=/
REMOTEDIR=<YOUR-HOST-NAME>
CURRENTPREFIX=~/incoming/
SNAPSHOTPREFIX=/.snapshots/
#REMOTEPERMS=1

##############################################################################
# Backup surveillance
##############################################################################
# Please do not modify these values if you don't know what you are doing.
SEPIOLADIR=/.sepiola_backup
STARTXML=backupStarted.xml
ENDXML=backupEnded.xml
SCHEDULERXML=scheduler.xml
